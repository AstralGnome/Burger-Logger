<h2>Burgers that are NOT devoured!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}

  <p>
    {{burger_name}}
    <button class="change-devoured" data-id={{id}} data-newdevoured="true">EAT ME!</button>
    <button class="delete-burger" data-id={{this.id}}>DELETE!</button>
  </p>

  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that ARE devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}

  <p>
    {{burger_name}}
    <button class="delete-burger" data-id={{this.id}}>DELETE!</button>
  </p>

  {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add burger</button>

</form>